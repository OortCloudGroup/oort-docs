shadow()
  box-shadow 0 .125rem 1rem rgba(0,0,0,.1) !important

border()
  border 1px solid $borderColor
  padding 5px
  margin-top 1rem
  border-radius 5px

#app
  background: #fcfcfc;
  width 100vw
  height 100vh

h1
  font-size 1.8rem

h2
  font-size 1.5rem

h3
  font-size 1.2rem

h4
  font-size 1rem

.text-center
  text-align center
.nowrap
  white-space nowrap

.img
  height 150px
  width 150px

.img-small
  height $qcode-width
  width $qcode-width
  // object-fit cover

.border
  border()

.shadow
  shadow()

.border-shadow
  border()
  transition box-shadow .3s ease
  &:hover
    shadow()

.danger
  color red

.contains-task-list LI
  list-style-type none

.self_page
  width: 100%
  margin: 0 auto

.search_box_top
  display: none

.search_box
  display: none


@media screen and (min-width:1000px)
  .self_page
    max-width: 1400px
    width: 1400px
    margin: 0 auto
    display: flex
    flex-direction: column
    justify-content: space-between

  .search_box_top
    height:6rem
    display: flex

  .search_box
    width:100%
    display: flex
    justify-content: center

